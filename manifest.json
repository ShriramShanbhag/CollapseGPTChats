{
    "manifest_version": 3,
    "name": "CollapseGPTMessages",
    "version": "1.0",
    "description": "Easily collapse and expand ChatGPT messages for faster navigation. Save your scroll, focus on what matters.",
    "permissions": ["storage", "alarms"],
    "content_scripts": [
      {
        "matches": ["https://chat.openai.com/*", "https://chatgpt.com/*"],
        "js": ["content.js"],
        "css": ["styles.css"],
        "run_at": "document_end"
      }
    ],
    "background": {
      "service_worker": "background.js"
    },
    "icons": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  }
  